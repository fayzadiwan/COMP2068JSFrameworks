<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>My Items</h2>
  <a class="btn btn-primary" href="/items/add">Add Item</a>
</div>

{{#if items.length}}
  <table class="table table-striped">
    <thead><tr><th>Title</th><th>Category</th><th>Actions</th></tr></thead>
    <tbody>
      {{#each items}}
        <tr>
          <td>{{title}}</td>
          <td>{{category}}</td>
          <td>
            <a class="btn btn-sm btn-outline-primary me-1" href="/items/{{_id}}/edit">Edit</a>
            <form action="/items/{{_id}}?_method=DELETE" method="post" style="display:inline" onsubmit="return confirm('Delete this item?');">
              <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have no items. <a href="/items/add">Add one</a>.</p>
{{/if}}
